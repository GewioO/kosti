<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Schedule</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="date" type="DateTime">
      <label>Date</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <timezone>true</timezone>
      </config>
    </input>
    <input name="image" type="ImageSelector">
      <label>Image</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowPath>./*</allowPath>
      </config>
    </input>
    <input name="hashtags" type="ContentSelector">
      <label>Hashtags</label>
      <occurrences minimum="0" maximum="5"/>
      <config>
        <allowContentType>hashtag</allowContentType>
      </config>
    </input>
    <input name="repeat" type="CheckBox">
      <label>Repeat</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <alignment>right</alignment>
      </config>
    </input>
  </form>
</content-type>