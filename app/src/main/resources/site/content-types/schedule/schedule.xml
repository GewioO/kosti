<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Schedule</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="date" type="Date">
      <label>Date</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="image" type="ImageSelector">
      <label>Image</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowPath>./*</allowPath>
      </config>
    </input>
  </form>
</content-type>