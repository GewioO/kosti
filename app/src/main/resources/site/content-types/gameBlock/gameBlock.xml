<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Game block</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="datetime" type="DateTime">
      <label>Date and time</label>
      <config>
        <timezone>true</timezone>
      </config>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="datetimeEnd" type="DateTime">
      <label>Date and time end</label>
      <config>
        <timezone>true</timezone>
      </config>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="description" type="HtmlArea">
      <label>Game block description</label>
      <config>
        <exclude>*</exclude>
        <include>AlignLeft AlignRight | Bold Italic</include>
      </config>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="blockType" type="ComboBox">
      <label>Block type</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="day">Day</option> 
        <option value="block">Block</option>
      </config>
      <default>one</default> 
    </input>
  </form>
</content-type>